{
    "workbench.settings.editor": "json",
    "workbench.editor.enablePreview": true,
    "workbench.sideBar.location": "right",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 8,
    "workbench.editor.wrapTabs": true,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.decorations.badges": true,
    "workbench.colorCustomizations": {
        "statusBar.background": "#212236",
        "statusBar.foreground": "#33ABCC"
    },
    "breadcrumbs.enabled": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.tabSize": 2,
    "editor.cursorBlinking": "smooth",
    "editor.minimap.enabled": false,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "editor.fontFamily": "Dank Mono, RecMonoCasual Nerd Font Mono, Mononoki Nerd Font Mono, ComicShannsMono Nerd Font Mono",
    "editor.fontSize": 18,
    "editor.lineHeight": 25,
    "editor.letterSpacing": 0,
    "editor.cursorWidth": 0,
    "editor.fontWeight": "900",
    "editor.cursorSurroundingLines": 18,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modifications",
    "editor.codeActionsOnSave": {
        "source.fixAll.biome": "always",
        "source.organizeImports.biome": "always",
        "source.sortImports": "always"
    },
    "editor.suggestSelection": "first",
    "editor.fontLigatures": true,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "entity.name.type.class",
                    "keyword",
                    "constant",
                    "storage.modifier",
                    "storage.type.class.js"
                ],
                "settings": {
                    "fontStyle": ""
                }
            },
            {
                "scope": [
                    "invalid",
                    "keyword.operator",
                    "constant.numeric.css",
                    "keyword.other.unit.px.css",
                    "constant.numeric.decimal.js",
                    "constant.numeric.json"
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            }
        ]
    },
    "editor.inlineSuggest.showToolbar": "always",
    "editor.linkedEditing": true,
    "vim.smartRelativeLine": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.searchHighlightColor": "#EBCB8B",
    "vim.searchHighlightTextColor": "#2E3440",
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.tabSwitches": true,
    "editor.folding": false,
    "editor.lineNumbers": "on",
    "editor.glyphMargin": false,
    "editor.scrollBeyondLastLine": false,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "y"
            ],
            "after": [
                "\"+",
                "y"
            ]
        },
        {
            "before": [
                "<shift>",
                "%"
            ],
            "commands": [
                "editor.emmet.action.matchTag",
            ]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "d",
                "d"
            ]
        },
        {
            "before": [
                "<leader>",
                "%"
            ],
            "commands": [
                "editor.emmet.action.matchTag"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before": [
                "<leader>",
                "r"
            ],
            "commands": [
                "revealInExplorer"
            ]
        },
        {
            "before": [
                "H"
            ],
            "commands": [
                "workbench.action.previousEditor"
            ]
        },
        {
            "before": [
                "L"
            ],
            "commands": [
                "workbench.action.nextEditor"
            ]
        },
        {
            "before": [
                "Q"
            ],
            "after": [
                "gq"
            ]
        }
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-w>": false,
        "<leader>r": false,
        "<leader>y": false
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "Dockerfile_*": "dockerfile",
        ".env*": "shellscript"
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[javascript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[json]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[latex]": {
        "editor.defaultFormatter": "James-Yu.latex-workshop"
    },
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml"
    },
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "cSpell.enabled": true,
    "cSpell.language": "en",
    "terminal.integrated.env.osx": {},
    "console-ninja.featureSet": "Community",
    "console-ninja.fontSize": 15,
    "auto-rename-tag.activationOnLanguage": [
        "html",
        "xml",
        "php",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    // "reactSnippets.settings.prettierEnabled": true,
    // "prettier.requireConfig": true,
    "workbench.preferredLightColorTheme": "Default Dark+",
    "explorer.confirmDelete": false,
    "github.copilot.editor.enableAutoCompletions": true,
    "editor.accessibilitySupport": "off",
    "eslint.format.enable": true,
    "symbols.hidesExplorerArrows": false,
    "biome.enabled": true,
    "biome.lspBin": "biome",
    "biome.formatOnSave": true,
    "biome.lintOnSave": true,
    "biome.organizeImportsOnSave": true,
    "biome.diagnostics.enabled": true,
    "biome.javascriptLanguageServer": true,
    "biome.typescriptLanguageServer": true,
    "workbench.iconTheme": "doodles-icons",
    "workbench.colorTheme": "August - In Bed By 7pm (Darker)",
}